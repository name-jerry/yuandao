/* pages/user/user.wxss */
.head {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0.5rem 1rem;
  box-shadow: var(--shadow-hover);
  border-radius: var(--border-radius);
}
.head .a {
  align-self: flex-end;
}
.head .img {
  display: block;
  margin: auto;
  width: 5rem;
  border-radius: 50%;
  box-shadow: var(--shadow);
}
.head .name {
  font-size: 1.2rem;
  margin: 0.2rem auto;
}
.head .id {
  margin: auto;
}
.head .resource .flex_item {
  margin: 0;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.head .resource .flex_item:not(:last-of-type) {
  border-right: 0.1rem gray solid;
}

.options {
  display: flex;
  flex-direction: column;
}
.options .item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 0.5rem;
  padding-right: 1rem;
  height: 2rem;
  box-shadow: var(--shadow-hover);
  margin-bottom: 0.3rem;
}
.options .item .icon {
  width: 1rem;
  height: 1rem;
}
.options .item:first-of-type {
  border-radius: var(--border-radius) var(--border-radius) 0 0;
}
.options .item:last-of-type {
  border-radius: 0 0 var(--border-radius) var(--border-radius);
  margin: 0;
}