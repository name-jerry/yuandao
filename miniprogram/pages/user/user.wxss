/* pages/user/user.wxss */
.head {
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  box-sizing: border-box;
  border-radius: var(--border-radius);
  box-shadow: var(--shadow-hover);
}
.name {
  font-size: 1.2rem;
  margin: 0.2rem auto;
}
.head_img {
  display: block;
  width: 5rem;
  border-radius: 50%;
  box-shadow: var(--shadow);
}
.bold {
  font: 600 1rem/1.3rem;
}
.w100 {
  width: 100%;
}
.head_icon {
  flex: 1;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.head_icon:not(:last-of-type) {
  box-shadow: 1rpx 0 var(--color-shadow);
}
.item_wraper {
  display: flex;
  flex-direction: column;
  border-radius: var(--border-radius);
}
.item {
  padding-left: 0.5rem;
  padding-right: 1rem;
  min-height: 2.5rem;
  justify-content: space-between;
  align-items: center;
  box-shadow: var(--shadow-hover);
}
.item:not(:last-of-type) {
  margin-bottom: 10rpx;
}

.item_icon {
  display: block;
  width: 1rem;
  height: 1rem;
}
.item:first-of-type {
  border-radius: var(--border-radius) var(--border-radius) 0px 0px;
}
.item:last-of-type {
  border-radius: 0 0 var(--border-radius) var(--border-radius);
}
.box_size {
  box-sizing: border-box;
}
.p20 {
  padding: 0.5rem;
}
.mgb20 {
  margin-bottom: 0.5rem;
}
