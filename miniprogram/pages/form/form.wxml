<!--pages/form/form.wxml-->
<form class=".container flex_box form" action="" bindsubmit="submit">
    
    <view class="flex_item name">
        <view class="flex_center">
        姓名:
    <input type="text"   name="name" class="input"/>
        </view>
    </view>

    <view class="flex_item sex">
    <radio-group name='sex' class="flex_center" >性别:
    <label ><radio value='man'  />  男</label>
    <label><radio value='woman' />  女</label>
    </radio-group>
    </view>
    <view class="flex_item age">
        <view class="flex_center">
        出生年月:
        <picker mode="date" value="{{age}}" data-type='age' fields="day" class='flex1'
        start="1960-01-01" end="2022-09-01" bindchange="pickerChange">
    <view class="input flex_center">
       {{age}}
    </view>
  </picker>
    </view>
    </view>
      <view class="flex_item area">
        <view class="flex_center">
        地区(可选):
        <picker mode="region" value="{{area}}" data-type='area' custom-item='全部' class='flex1'
        bindchange="pickerChange">
    <view class="input flex_center">
       当前{{area[0]}}{{area[1]}}{{area[2]}}
    </view>
  </picker>
    </view>
    </view>
    <view  class="flex_item btn">
    <button type="submit">提交</button>
    <button type="reset">重置</button>
    </view>
    
</form>
