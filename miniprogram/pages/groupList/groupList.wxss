.head .content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.head .content .subhead {
  font-size: 1.1rem;
}
.head .content .bloder {
  font-size: 0.8rem;
}

.group .content {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 1rem 0.5rem;
}
.group .content .row {
  flex: 1;
  display: flex;
  margin: 0.2rem;
}
.group .content .row .subhead {
  margin-right: 0.4rem;
}

.limit .text {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
}
.limit .text .inner {
  border-radius: calc(var(--border-radius) / 2);
  box-shadow: var(--shadow-hover);
  background-color: var(--theme-mid);
  color: #fff;
  text-shadow: none;
  font-size: 0.8rem;
  margin: 0.2rem 0.2rem;
  padding: 0.1rem 0.3rem;
}

.btn_group .btn {
  border-radius: calc(var(--border-radius) / 2);
  font-family: sans-serif;
  padding: 0;
  max-width: 5rem;
  color: var(--theme);
  background-color: var(--color-bg);
}

.last {
  justify-content: center;
  align-items: center;
}
.last .text {
  font-size: 1.4rem;
}